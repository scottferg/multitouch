#!/bin/sh -e

#DEBHELPER#

CVERSION=`dpkg-query -W -f='${Version}' magicmouse-kernel-source | awk -F "-" '{print $1}' | cut -d\: -f2`
case "$1" in
    remove|upgrade|purge)
		echo "Removing all DKMS Modules"
		dkms remove -m magicmouse -v $CVERSION --all > /dev/null
		echo "Done."
        ;;
esac

#DEBHELPER#
